<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card" style="margin-bottom: 16px;">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="Card image cap" />
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" style="text-decoration: none;">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua</a>
                </div>
            </div>
        </div> 
        {{/each}}

    </div>
</div>